<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyCustomAppTheme" parent="Theme.AppCompat">

       <!-- <item name="android:windowBackground">@mipmap/bpl_be_well_parameter_bg</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>



    <style name="DialogBoxAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>

    </style>


    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/YourTextAppareance</item>
    </style>


    <style name="YourTextAppareance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily"></item>
    </style>
</resources>
